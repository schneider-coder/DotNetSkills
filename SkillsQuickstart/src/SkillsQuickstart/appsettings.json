{
  "Skills": {
    "BasePath": "skills",
    "SkillFileName": "SKILL.md",
    "TemplatesDirectory": "templates",
    "ReferencesDirectory": "references",
    "ScriptsDirectory": "scripts",
    "AssetsDirectory": "assets",
    "TemplatePattern": "*.template.*",
    "ReferencePattern": "*.md",
    "ScriptPattern": "*.*",
    "AssetPattern": "*.*",
    "CacheDurationMinutes": 5,
    "EagerLoadResources": false
  },
    "AzureOpenAI": {
        "Endpoint": "",
        "ApiKey": "",
        "DeploymentName": "gpt-4.1",
        "MaxTokens": 4096,
        "Temperature": 0.7
    },
  "McpServers": {
    "Servers": [
      {
        "Name": "skills-mcp-server",
        "Command": "dotnet",
        "Arguments": [
          "../../../../SkillsMcpServer/bin/Debug/net10.0/SkillsMcpServer.dll"
        ],
        "Environment": {},
        "Enabled": true
      },
      {
        "Name": "github-mcp-server",
        "Command": "npx",
        "Arguments": [
          "-y",
          "@modelcontextprotocol/server-github"
        ],
        "Environment": {
            "GITHUB_PERSONAL_ACCESS_TOKEN": ""
        },
        "Enabled": true
      }
    ]
  }
}
